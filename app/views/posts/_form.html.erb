<%= form_for @post do |f|%>
        <% if @post.errors.any? %>
            <div id="errors">
                <h3> <%= pluralize(@post.errors.count, "error") %> errors occured </h3>
                <ul>
                    <% @post.errors.full_messages.each do |msg| %>
                        <li> <%= msg %> </li>
                    <% end %>
                </ul>
            </div>
        <% end %>
        <p>
            <%= f.label :title %> <br>
            <%= f.text_field :title %>
        </p>
        <p>
            <%= f.label :body %> <br>
            <%= f.text_field :body %>
        </p>
        <p>
            <%= f.submit %>
        </p>
    <% end %>